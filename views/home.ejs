              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/products/mens">MEN</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/products/women">WOMEN</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/products/kids">KIDS</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/products/beauty">BEAUTY</a>
              </li>
              <li class="nav-item">
                <% if (currentUser && currentUser.role === 'seller') { %>
                    <a class="nav-link" href="/products/new">NEW</a>
                <% } %>
              </li>
              
            </ul>
            <div class="collapse navbar-collapse" id="navbarSupportedContent"></div>
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <% if (!currentUser) { %>
                        <li class="nav-item">
                          <a class="nav-link" href="#"><i class="fas fa-shopping-cart"></i>Bag</a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" href="/login"><i class="far fa-user"></i>Login</a>
                        </li>
                      <% } else { %>
                        <li class="nav-item">
                          <a class="nav-link" href="#"><i class="fas fa-shopping-cart"></i>Bag</a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" href="#"><i class="far fa-heart"></i>Wishlist</a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt"></i>Logout</a>
                        </li>
                      <% } %>
                </ul>
            </div>
          </div>
        </div>
    </nav>

    <section class="section-A">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-md-8 text-center content">
                    <h1>Welcome to eShop</h1>
                    <p>Experience the Joy of Shopping with eShop</p>
