<%= layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-md-4 mx-auto">
        <form class="needs-validation" action="/products/<%= product._id %>?_method=PATCH" method="POST" novalidate>
            <div class="mb-3">
              <label for="brand" class="form-label">Product Brand Name</label>
              <input type="text" class="form-control" id="brand" name="brand" placeholder="Product brand name" value="<%= product.brand %>" required>
            </div>
            <div class="mb-3">
              <label for="image" class="form-label">Product Image URL</label>
              <input type="text" class="form-control" id="image" name="image" placeholder="Product image URL" value="<%= product.image %>" required>
            </div>
            <div class="mb-3">
              <label for="price" class="form-label">Product Price and MRP</label>
              <div class="input-group">
                <span class="input-group-text">&#8377;</span>
                <input type="number" class="form-control" id="price" name="price" placeholder="Product price" value="<%= product.price %>" required>
                <span class="input-group-text">MRP</span>
                <input type="number" class="form-control" id="mrp" name="mrp" placeholder="Products MRP" value="<%= product.mrp %>" required>
              </div>
            </div>
            <div class="mb-3">
              <label for="category" class="form-label">Product Category</label>
              <select id="category" name="category" required>
                <option value="mens" <% if (product.category === 'mens') { %>selected<% } %>>Mens</option>
                <option value="women" <% if (product.category === 'women'){ %>selected<% } %>>Women</option>
                <option value="kids" <% if (product.category === 'kids') { %>selected<% } %>>Kids</option>
                <option value="beauty" <% if (product.category === 'beauty') { %>selected<% }%>>Beauty</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="description" class="form-label">Product Description</label>
              <textarea type="text" class="form-control" id="description" name="description" rows="3" required><%= product.description %></textarea>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
          </form>
    </div>
</div>